<% layout('layout') -%>

<div class="jumbotron" id="navbar-gap">
      <div class="container">
        <h1>Shop Smart, Save Big!</h1>
        <p>Find Your Favourite Product</p>
        <!-- <p><a class="btn btn-primary btn-lg" href="#" role="button">Signup &raquo;</a></p> -->
      </div>
</div>

<div class="container">
 <div class="row">
        <% for (var i = 0; i < products.length; i++) {%>
            <div class="col-md-4">
                <a href="/product/<%= products[i]._id %>">
                    <div class="thumbnail">
                        <img src="<%= products[i].image %>">
                        <div class="caption">
                            <h3><%= products[i].name %></h3>
                            <p><%= products[i].category.name %></p>
                            <p>$<%= products[i].price %></p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>

        <ul class="pagination text-center">
            <li>
                <% for(var i = 0; i < pages; i++) {%>
                    <% if (i === 0) { %>
                        <li><a href="/">Home</a></li>
                    <% } else { %>
                        <li><a href="/page/<%= i %>"><%= i %></a></li>
                    <% } %>
                <% } %>
            </li>
        </ul>
  </div>
</div>
